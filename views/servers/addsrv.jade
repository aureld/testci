doctype html
html
	head
	title Add a server
	meta(name='viewport', content='width=device-width, initial-scale=1.0')
	!= css('bootstrap.min')
	!= css('styles')
	!= js('jquery-2.1.0')
	!= js('bootstrap.min')

	body
		include ../topbar
		ol.breadcrumb
			li
				a(href="/") Home
			li
				a(href="/servers") Servers	
			li.active Add a Server
		.container
					div.panel.panel-default
						div.panel-heading
							h3.panel-title Create a  New Server
						div.panel-body
							p
							form.form-horizontal(action="/servers/create", method="post", enctype: "application/x-www-form-urlencoded")
								div.form-group
									label.col-sm-2.control-label(for="name") Name: 
									div.col-sm-10
										input#name(type="text", name="name", placeholder="MyServer")
								div.form-group
									label.col-sm-2.control-label(for="address") IP address:
									div.col-sm-10
										input#address(type="text", name="address", placeholder="192.168.0.1")
								div.form-group
												.col-sm-offset-2
													&nbsp; &nbsp;
													a.btn.btn-danger(href="/servers") Cancel	
													&nbsp;
													input.btn.btn-primary(type="submit",value="Submit")
		include ../footer	